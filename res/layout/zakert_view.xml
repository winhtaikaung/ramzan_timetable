<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    
     >
    <TextView
        android:id="@+id/txt_desc_zakart"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="ဇကာသ္ တြက္ရန္"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginBottom="20dp"
         />
   
    <Button
        android:id="@+id/split"
        android:layout_height="10dp"
        android:layout_width="fill_parent"
        android:clickable="false"
        >        
    </Button>

    
    <LinearLayout 
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:orientation="horizontal"
        >
    <TextView
        android:id="@+id/txt_desc_goldamt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="ေရႊပမာဏ"
        android:textColor="#FFF"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_weight="2"
         />
    
    <EditText
        android:id="@+id/txt_gold_amt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal" 
        android:hint="မိမိတြင္ရွိေသာေရႊပမာဏ ကိုျဖည့္ပါ။"
        android:layout_weight="1"
        >

        <requestFocus />
    </EditText>
	</LinearLayout>
	<LinearLayout 
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:orientation="horizontal"
        	
        >
    <TextView
        android:id="@+id/txt_desc_money"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="ေငြေျကးပမာဏ"
        android:textColor="#FFF"
        android:textAppearance="?android:attr/textAppearanceLargeInverse"
        android:layout_weight="2"
         />
    
    <EditText
        android:id="@+id/txt_money_amt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal" 
        android:hint="မိမိတြင္ရွိေသာေငြေျကးပမာဏ ကိုျဖည့္ပါ။"
        android:layout_weight="1"
        >

       
    </EditText>
	</LinearLayout>
	<LinearLayout 
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:orientation="horizontal"
        	android:layout_marginBottom="30dp"
        >
    <TextView
        android:id="@+id/txt_desc_gold_price"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text= "ယေန႔ေရႊေစ်း"
        android:textColor="#FFF"
        android:textAppearance="?android:attr/textAppearanceLargeInverse"
        android:layout_weight="2"
         />
    
    <EditText
        android:id="@+id/txt_gold_price"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal" 
        android:hint="ယေန႔ေရႊေစ်း"
        android:layout_weight="1"
        >

        
    </EditText>
	</LinearLayout>
	<LinearLayout 
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:orientation="horizontal"
        >
     <Button
        android:id="@+id/btn_calculate"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        
        android:layout_weight="1"
        android:background="#079702"
        android:textColor="#FFF"
        android:padding="10dp"
        android:text="တြက္မယ္"
        android:textSize="20dp"
        android:textAppearance="@android:attr/textAppearanceLarge"
        >        
    </Button>
    <Button
        android:id="@+id/btn_clear"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        
        android:background="#CA1111"
        android:textColor="#FFF"
        android:padding="10dp"
        android:text="ရွင္းလင္းသည္"
        android:layout_weight="1"
        android:textSize="20dp"
        android:textAppearance="@android:attr/textAppearanceLarge"
        >        
    </Button>
    </LinearLayout>
</LinearLayout>
